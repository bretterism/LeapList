<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        @if (Request.IsAuthenticated && ViewContext.RouteData.Values["action"] != "Login")
        {
            @Html.ActionLink("LeapList", "Index", "Profile", new { @class = "btn btn-default" })
            @Html.ActionLink("Sign Out", "SignOut", "Profile", new { @class = "btn btn-default"})
        }
        else if (!Request.IsAuthenticated && ViewContext.RouteData.Values["action"] != "Login")
        {
            @Html.ActionLink("Log In", "Login", "Login", new { @class = "btn btn-default"})
        }
        
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>