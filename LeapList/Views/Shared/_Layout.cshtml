<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("Jquery", required: false)

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        @if(Request.IsAuthenticated)
        {
            @Html.ActionLink("Sign Out", "SignOut", "Profile", new { @class = "btn btn-default"})
        }
        else if (!Request.IsAuthenticated && ViewContext.RouteData.Values["action"] != "Login")
        {
            @Html.ActionLink("Log In", "Login", "Login", new { @class = "btn btn-default"})
        }
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>