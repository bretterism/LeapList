@model List<LeapList.Models.SearchVM>

@{
    ViewBag.Title = "Profile";
}

<h2>Hello, @ViewBag.User</h2>

<h3>Searches</h3>

<div class="row">
    <div class="col-sm-8">
        <table id="ProfileTable" class="table table-hover">
            <thead>
                <tr>
                    <td><strong>Search</strong></td>
                    <td><strong>Min Price</strong></td>
                    <td><strong>Max Price</strong></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var svm in Model)
                {
                    <tr data-toggle="modal" data-target="#SearchModal">
                        <td>@svm.SearchText</td>
                        <td>@(svm.MinPrice == 0m ? null : svm.MinPrice)</td>
                        <td>@(svm.MaxPrice == 0M ? null : svm.MaxPrice)</td>
                        <td>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ActionLink("Delete", "DeleteSearch", new { id = svm.SearchId })
                            }
                        </td>
                        <td>
                            <div class="modal fade" id="SearchModal">
                                <div class="modal=dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">Search Details</h4>
                                        </div>
                                        <div class="modal-body">
                                            <label class="control-label">Categories</label>
                                            @foreach (string cat in svm.Category)
                                            {
                                                string.Format("{0}", cat);
                                            }
                                        </div>
                                        <div class="modal-footer">
                                            @Html.ActionLink("Edit", "#", new { @class = "btn btn-default" })
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <a href="~/Profile/AddSearch" class="btn btn-default" />Add Search</a>
</div>