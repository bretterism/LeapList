@model LeapList.Models.NewUserVM

@{
    ViewBag.Title = "New User";
}

<h2>New User</h2>

<div class="row">
    <div class="col-sm-8">
        <div class="alert alert-warning">
            @Html.ValidationMessage("UserExists")
        </div>
    </div>
</div>

@using (Html.BeginForm(new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2" })
            @Html.TextBoxFor(m => m.Username, new { @placeholder = "enter username", @class = "form-control col-sm-8" })
            @Html.ValidationMessageFor(m => m.Username, string.Empty, new { @class = "col-sm-2 text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "enter e-mail", @class = "form-control col-sm-8" })
            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "col-sm-2 text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
            @Html.PasswordFor(m => m.Password, new { @placeholder = "enter password", @class = "form-control col-sm-8" })
            @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "col-sm-2 text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-2" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "confirm password", @class = "form-control col-sm-8" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "col-sm-2 text-danger" })
        </div>
    </div>

    <input type="submit" value="Register" class="btn btn-default" />
}
