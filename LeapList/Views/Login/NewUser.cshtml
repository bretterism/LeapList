@model LeapList.Models.NewUserVM

@{
    ViewBag.Title = "New User";
}

<h2>New User</h2>


<div>
    @Html.ValidationMessage("UserExists")
</div>

@using (Html.BeginForm(new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2"})
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Username, new { @placeholder = "enter username", @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.Username)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City, new { @class = "control-label col-sm-2" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.City, new { @placeholder = "enter city", @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.City)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "enter e-mail", @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Password, new { @placeholder = "enter password", @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-2" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @placeholder = "confirm password", @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>

    <input type="submit" value="Register" class="btn btn-default" />
}
